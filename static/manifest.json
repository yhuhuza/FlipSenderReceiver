{
  "name": "FlipSenderReceiver",
  "version": "0.0.0.1",
  "author": "@yhuhuza_@DmtryWazzup",
  "description": "App allows You to stay in touch with nft projects and their properties",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "webRequest",
    "webNavigation",
    "unlimitedStorage",
    "cookies",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "vendors/bundle.js",
      "background/bundle.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "all_frames": false,
      "js": [
        "vendors/bundle.js",
        "content/bundle.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "16x16.png",
    "24": "24x24.png",
    "32": "32x32.png",
    "64": "64x464.png",
    "128": "128x128.png"
  },
  "browser_action": {
    "default_icon": "128x128.png",
    "default_title": "FlipSenderReceiver",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "content/*.css",
    "content/*.svg",
    "icons/*.png",
    "*.css",
    "*.png"
  ]
}
